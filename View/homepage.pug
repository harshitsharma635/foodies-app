    section
        .form-head
            h2 WE'RE HAPPY TO HEAR FROM YOU
            hr
        form(action='')
            table
                tbody
                    tr
                        td
                            label(for='Name') Name
                        td
                            input(type='text' placeholder='Your Name')
                    tr
                        td
                            label(for='Email') Email
                        td
                            input(type='email' placeholder='Your Email')
                    tr
                        td
                            label(for='source') How did you find us?
                        td
                            select#find-us(name='find-us')
                                option(value='friends') friends
                                option(value='search') search engine
                                option(value='instagram') instagram
                                option(value='ad') advertisement
                                option(value='other') others
                    tr
                        td
                            label(for='newsletter') Newsletter
                        td
                            input(type='checkbox' checked='')
                            | Yes please!
                    tr
                        td
                            label(for='message') Drop us a line
                        td
                            textarea(name='message' id='' cols='30' rows='10' placeholder='Your message')
                    tr(style='text-align: center;')
                        td(colspan='2')
                            input.book.btn(style='color: white;' type='submit')


    